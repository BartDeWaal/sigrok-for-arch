pkgname=libsigrokdecode-git
_pkgname=libsigrokdecode
pkgver=1015.27b3f2b
pkgrel=1
pkgdesc="Sigrok Protocol Decoders"
arch=('x86_64' 'i686')
license=('GPLv3')
makedepends=()
conflicts=()
replaces=()
backup=()
source=("git://sigrok.org/libsigrokdecode")
md5sums=('SKIP')
pkgver() {
  cd "$srcdir/$_pkgname"

  echo $(git rev-list --count master).$(git rev-parse --short master)
}
build() {
  cd "$srcdir/$_pkgname"
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$_pkgname"
  make DESTDIR="${pkgdir}" PREFIX=/usr install
}
